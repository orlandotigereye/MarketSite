@model MarketSite.Models.ExtendRole

@{
    ViewBag.Title = "詳細資料";
}

<h2>詳細資料</h2>

<div>
    @*<h4>Account</h4>*@
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @*@Html.DisplayNameFor(model => model.AccountID)*@
            角色名稱
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ExRoleName)
        </dd>        
    </dl>
</div>
<h4>帳號列表</h4>
@if (ViewBag.UserCount == 0)
{
    <hr />
    <p>查無帳號</p>
}

<table class="table">

    @foreach (var item in ViewBag.Users)
    {
        <tr>
            <td>
                @item.ExAccountID
            </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("編輯", "Edit", new { id = Model.ExRoleUUID }) |
    @Html.ActionLink("回到列表", "Index")
</p>